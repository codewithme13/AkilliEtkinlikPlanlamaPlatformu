@{ Layout = null; }

<style>
    /* Genel stil ayarları */
    body, html {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f4f4f4; /* Arka plan rengi */
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .panel {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 300px;
        text-align: center;
    }

    h2 {
        color: #3498db; /* Başlık rengi */
    }

    p {
        color: #555;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .input-field {
        width: 100%; /* Genişlik %100, ancak max-width ile sınırlandırılacak */
        max-width: 400px; /* Maksimum genişlik, sağdaki boşlukları dengelemek için */
        padding: 12px 15px; /* İçerideki yazının etrafında boşluk (padding) */
        font-size: 16px; /* Yazı tipi boyutu */
        border: 2px solid #3498db; /* Mavi renkli kenarlık */
        border-radius: 8px; /* Yuvarlatılmış köşeler */
        margin-top: 5px; /* Üstten boşluk (label ile input arasına mesafe) */
        box-sizing: border-box; /* Padding ve border'ı toplam genişlik/uzunluk hesabına dahil et */
        transition: all 0.3s ease; /* Değişimlerin animasyonla yumuşak geçiş yapması için */
    }

        .input-field:focus {
            outline: none; /* Odaklanıldığında dışarıdaki odak çerçevesini kaldır */
            border-color: #8e44ad; /* Odaklanıldığında kenarlık rengi mor olur */
            box-shadow: 0 0 10px rgba(142, 68, 173, 0.5); /* Mor renkte kutu gölgesi */
        }

    .submit-button {
        background-color: #3498db; /* Buton rengi */
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
    }

        .submit-button:hover {
            background-color: #2980b9;
        }

        .submit-button:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.7);
        }

    .alert-message {
        color: red;
        margin-bottom: 20px;
        font-size: 16px;
    }
</style>

<div class="container">
    <div class="panel">
        <h2>Şifremi Unuttum</h2>
        <p>Sıfırlama kodu için lütfen E-posta adresinizi giriniz.</p>

        <!-- Eğer ViewBag.AlertMessage varsa göster -->
        @if (ViewBag.AlertMessage != null)
        {
<div class="alert-message">
    @ViewBag.AlertMessage
</div>}

        <!-- E-posta formu -->
        <form method="post" action="/Login/ResetPassword">
            <div class="form-group">
                <label for="email">E-posta Adresi</label>
                <input type="email" id="email" name="Eposta" class="input-field" placeholder="E-posta adresi.." required />
            </div>

            <div class="form-group">
                <button type="submit" class="submit-button">Gönder</button>
            </div>
        </form>
    </div>
</div>
