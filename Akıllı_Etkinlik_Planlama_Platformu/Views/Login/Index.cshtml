<!DOCTYPE html>
<html lang="en">
<head>
    <title>Akıllı Etkinlik Planlama Platformu</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <!-- Google fonts -->
    <!-- css files -->
    <link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="~/weblogin/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" /> <!-- popup box css -->

</head>
<!-- body starts -->
<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/weblogin/js/jquery.magnific-popup.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Pop-up açılacak elementler için magnificPopup başlatma
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',  // popup'ın tipini inline olarak belirliyoruz
                fixedContentPos: false, // İçeriğin pozisyonu
                fixedBgPos: true,  // Arka planın pozisyonu
                overflowY: 'auto',  // Y ekseninde kaydırma
                closeBtnInside: true,  // Kapanma butonunun popup içinde olması
                preloader: false,  // Ön yükleme simgesini devre dışı bırakma
                midClick: true,  // Orta fare tuşuyla açılabilmesi
                removalDelay: 300,  // Kapanma animasyonu süresi
                mainClass: 'my-mfp-zoom-in'  // Animasyon sınıfı
            });
        });
        $(document).ready(function() {
        $("#forgotPasswordButton").click(function() {
            // Burada ResetPassword view'ine yönlendiriyoruz.
            window.location.href = '@Url.Action("ResetPassword", "Login")';
        });
    });
    </script>

  
    <style>
        /* Şifremi Unuttum Butonu Stili */
        #forgotPasswordButton {
            background-color: #3498db; /* Butonun mavi arka plan rengi */
            color: white; /* Yazı rengi */
            padding: 12px 25px; /* İç boşluk (üst-alt, sağ-sol) */
            font-size: 16px; /* Yazı boyutu */
            border: none; /* Kenarlık kaldırıldı */
            border-radius: 5px; /* Kenarları yuvarlat */
            cursor: pointer; /* Fareyi butonun üzerine getirdiğinde işaretçi değişir */
            transition: background-color 0.3s ease, transform 0.3s ease; /* Hover efekti için geçiş ekledik */
            display: block; /* Butonu bir blok elementi yapalım */
            margin-top: 15px; /* Giriş yap butonuyla arasında mesafe */
            width: 100%; /* Butonun genişliği container'a göre tam olsun */
            text-align: center; /* Yazıyı ortalayalım */
        }

            /* Hover Efekti - Butona fare ile gelindiğinde renk değişimi ve büyüme */
            #forgotPasswordButton:hover {
                background-color: #2980b9; /* Hover durumunda arka plan rengi */
                transform: scale(1.05); /* Buton hafifçe büyür */
            }

            /* Focus Efekti - Butona tıklandığında */
            #forgotPasswordButton:focus {
                outline: none; /* Buton odaklandığında etrafında mavi kenarlık görünmesin */
                box-shadow: 0 0 5px rgba(52, 152, 219, 0.7); /* Butona odaklandığında gölge ekleyelim */
            }

    </style>





    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">
                    <span class="title-line1">Akıllı Etkinlik</span><br>
                    <span class="title-line2">Planlama Platformu</span>
                </a>
            </div>
            <div class="social">
                <li><a href="#"><span class="fa fa-instagram"></span></a></li>
                <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                <li><a href="#"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="#"><span class="fa fa-google-plus"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>Sizler İçin</p>
                    <h1>Yeni Etkinlikler</h1>
                    <h2>Yeni Maceralar</h2>
                    <p>
                        İlgi alanlarınıza göre yeni etkinliklere katılabilir aynı zamanda kendinizde yeni bir etkinlik oluşturarak yeni arkadaşlıklar edinip güzel bir deneyim yaşayabilirsiniz
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="#">Etkinlikler</a></li>
                            <li><a class="read" href=@Url.Action("Index", "Home")>Hadi Başlayalım</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book button-isi zoomIn animated" href="@Url.Action("Kayıt", "Login")">Kayıt Ol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Kullanıcı Girişi »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Admin Girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2024 Yazlab Project. Tüm hakları saklıdır | Oluşturan <a href="https://www.linkedin.com/in/umut-kahraman-766696253?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app" target="_blank">umutkahraman</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Giriş</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("KullaniciLogin1", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="KullaniciAdi" Placeholder="Kullanıcı Adınız" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                    <button id="forgotPasswordButton">Şifremi Unuttum</button>

                    <div id="forgotPasswordFormContainer"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Admin Girişi</h3>
                    <div class="clear"></div>
                    <div class="login-agileits-top">

                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="KullaniciAdi" Placeholder="Kullanıcı Adınız" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifre" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                    <button id="forgotPasswordButton">Şifremi Unuttum</button>
                    <!-- Şifremi Unuttum Formu Burada Yüklenecek -->
                    <div id="forgotPasswordFormContainer"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- //register form popup-->
    <!-- js -->
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>