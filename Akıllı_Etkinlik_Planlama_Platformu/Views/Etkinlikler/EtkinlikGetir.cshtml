@model Akıllı_Etkinlik_Planlama_Platformu.Models.Siniflar.Etkinlikler
@{
    ViewBag.Title = "EtkinlikGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Etkinlik Güncelleme</h2>
<br />
@using (Html.BeginForm("EtkinlikGuncelle", "Etkinlikler", FormMethod.Post))
{
    if (TempData["SuccessMessage"] != null)
    {
<div class="alert alert-success">
    @TempData["SuccessMessage"]
</div>}

                    if (TempData["ErrorMessage"] != null)
                    {
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>}
                    <div class="form-group">
                        @Html.HiddenFor(x => x.ID)
                        @Html.LabelFor(x => x.EtkinlikAdi)
                        @Html.TextBoxFor(x => x.EtkinlikAdi, new { @class = "form-control" })
                        @Html.LabelFor(x => x.Aciklama)
                        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
                        @Html.LabelFor(x => x.Tarih)
                        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                        @Html.LabelFor(x => x.Saat)
                        @Html.TextBoxFor(x => x.Saat, new { @class = "form-control" })
                        @Html.LabelFor(x => x.EtkinlikSuresi)
                        @Html.TextBoxFor(x => x.EtkinlikSuresi, new { @class = "form-control" })
                        @Html.LabelFor(x => x.Konum)
                        @Html.TextBoxFor(x => x.Konum, new { @class = "form-control" })
                        @Html.LabelFor(x => x.Kategori)
                        @Html.TextBoxFor(x => x.Kategori, new { @class = "form-control" })
                    </div>
                    <button class="btn btn-warning">Güncelle</button>
                }

