<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Etkinlik Kategorileri</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>

    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #acb6e5);
            font-family: 'Arial', sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .layout-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            padding: 20px;
        }

        .layout-title {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
            width: 80%;
            max-width: 1200px;
            text-align: center;
        }

        /* Harita ve Mesaj Kutusunu Yanyana Yerleştirme */
        .content-row {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: stretch;
            width: 80%;
            max-width: 1200px;
            gap: 20px;
        }

        #messageBoxContainer, #mapContainer {
            flex: 1; /* Her biri ekranın yarısını kaplar */
            background-color: #f7f7f7;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            height: 400px;
        }

        #map {
            width: 100%;
            height: 100%;
            border-radius: 10px;
        }

        .message-box {
            height: 80%;
            overflow-y: auto;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            display: none; /* Başlangıçta gizli */
        }

        .message-input {
            width: calc(100% - 80px);
            height: 40px;
            margin-top: 10px;
            padding: 10px;
            border-radius: 20px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .send-btn {
            width: 60px;
            height: 40px;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }

            .send-btn:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="layout-container">
        <div class="layout-title">
            @RenderBody()
        </div>

        <!-- Harita ve Mesaj Kutusunu Yanyana Yerleştir -->
        <div class="content-row">
            <div id="messageBoxContainer">
                <div id="messageBox" class="message-box">
                    <!-- Mesajlar burada görünecek -->
                </div>
                <textarea id="messageInput" placeholder="Mesajınızı yazın..." class="message-input"></textarea>
                <button id="sendMessageBtn" class="send-btn" onclick="mesajGonder()">Gönder</button>
            </div>

            <div id="mapContainer">
                <div id="map"></div>
            </div>
        </div>
    </div>

    <script>
        // Harita başlatma işlevi (Google Maps için)
        function initMap() {
            var mapOptions = {
                center: { lat: 41.0082, lng: 28.9784 }, // İstanbul koordinatları
                zoom: 8
            };
            var map = new google.maps.Map(document.getElementById('map'), mapOptions);
        }
    </script>
    
</body>
</html>
